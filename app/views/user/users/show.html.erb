<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h4 class="text-center mt-3 mb-5"><%= @user.name %>さんのキッチン</h4>

      <div class="tabs">
        <ul class="nav nav-tabs d-flex justify-content-between">
          <li class="nav-item">
            <%= link_to "トップ", "#section1", class: "nav-link active", data: { toggle: "tab" } %>
          </li>
          <li class="nav-item">
            <%= link_to "レシピ","#section2", class: "nav-link", data: { toggle: "tab" } %>
          </li>
          <li class="nav-item">
            <%= link_to "お気に入り","#section3", class: "nav-link", data: { toggle: "tab" } %>
          </li>
        </ul>
        <div class="tab-content">
          <div id="section1" class="tab-pane fade show active">
            <%= render "user/users/top" %>
          </div>
          <div id="section2" class="tab-pane fade">
            <%= render "user/users/recipe" %>
          </div>
          <div id="section3" class="tab-pane fade">
            <%= render "user/users/report" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>